<?xml version="1.0" encoding="utf-8"?>
<!-- 
  Futuristic News Article Layout
  Designed to match the AI-powered, high-tech aesthetic.
  - Dark background for a premium feel.
  - Accent border for a "glowing" effect.
  - Clear typography hierarchy.
-->
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardBackgroundColor="#1A1D2A" 
    app:cardCornerRadius="16dp"
    app:cardElevation="0dp"
    app:strokeColor="#303A7DFF"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/article_image"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="centerCrop" /> <!-- src will be loaded from the internet -->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:id="@+id/article_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CRYPTO"
                android:textColor="#3A7DFF"
                android:textSize="12sp"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/article_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/article_category"
                android:text="Article Title Placeholder"
                android:textColor="#E1E3E8"
                android:textSize="20sp"
                android:textStyle="bold"
                android:maxLines="2"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/article_source"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/article_title"
                android:layout_marginTop="8dp"
                android:text="Source Name"
                android:textColor="#8A94A6"
                android:textSize="12sp" />

             <TextView
                android:id="@+id/article_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/article_title"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="8dp"
                android:text="5h ago"
                android:textColor="#8A94A6"
                android:textSize="12sp" />
        </RelativeLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
