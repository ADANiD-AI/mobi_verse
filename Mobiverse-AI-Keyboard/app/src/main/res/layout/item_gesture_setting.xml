<!-- res/layout/item_gesture_setting.xml -->
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/iv_gesture_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_swipe_up" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="16dp">

        <TextView
            android:id="@+id/tv_gesture_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Swipe Up"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/tv_assigned_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Open App Drawer"
            android:textAppearance="?android:attr/textAppearanceSmall" />
    </LinearLayout>

    <Spinner
        android:id="@+id/spinner_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
